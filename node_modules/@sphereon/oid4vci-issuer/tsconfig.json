{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",    // Output directory for compiled files
      "rootDir": "./lib",   // Root directory of source files
      "sourceMap": true
    },
    "include": [
      "lib/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  